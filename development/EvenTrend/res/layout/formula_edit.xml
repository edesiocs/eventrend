<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<EditText android:id="@+id/formula_edit" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:editable="true"
		android:layout_weight="1"
		android:gravity="top|left" android:scrollbars="vertical"
		android:singleLine="false" android:layout_gravity="top|left"></EditText>

  <LinearLayout android:layout_height="wrap_content"
    android:layout_width="fill_parent" android:orientation="horizontal">

    <Button android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text="()"
      android:id="@+id/formula_add_group" android:layout_gravity="left|center_vertical">
    </Button>
    <LinearLayout android:layout_height="wrap_content"
      android:layout_width="wrap_content" android:orientation="horizontal"
      android:id="@+id/formula_add_series_layout">
    </LinearLayout>
    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/formula_operator_menu">
    </Spinner>    
    <Button android:layout_width="wrap_content"
      android:layout_height="wrap_content" android:text="Clear"
      android:id="@+id/formula_clear" android:layout_gravity="left|center_vertical">
    </Button>
  </LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal">

		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Cancel"
			android:id="@+id/formula_cancel" android:layout_gravity="left|center_vertical">
		</Button>
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Save" android:id="@+id/formula_save"
			android:layout_gravity="right|center_vertical">
		</Button>
	</LinearLayout>

	<ListView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/android:list"
		android:choiceMode="singleChoice" android:longClickable="true">
	</ListView>
</LinearLayout>

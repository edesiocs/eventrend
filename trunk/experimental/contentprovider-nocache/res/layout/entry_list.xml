<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_gravity="center_horizontal|center_vertical"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/entry_list_category_menu_row" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|center_vertical"
		android:orientation="horizontal">
		<TextView 
			android:id="@+id/edit_list_status" 
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
      android:text="Category:">
		</TextView>
    <net.redgeek.android.eventrend.util.DynamicSpinner 
          android:layout_height="wrap_content"
          android:layout_width="fill_parent" 
          android:id="@+id/entry_list_category_spinner" android:layout_gravity="center_horizontal|center_vertical"/>
  </LinearLayout>
	
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		xmlns:android="http://schemas.android.com/apk/res/android" 
		android:orientation="vertical" 
		android:id="@+id/entry_list">

		<ListView
    		android:layout_width="wrap_content" 
    	  	android:layout_height="wrap_content" 
    	  	android:id="@+id/android:list" 
    	  	android:choiceMode="singleChoice">
    	</ListView>
    	<TextView 
    		android:layout_width="wrap_content" 
    	    android:layout_height="wrap_content" 
    	    android:id="@+id/android:empty" 
    	    android:text="No data to display.">
    	</TextView>
	</LinearLayout>
</LinearLayout>
